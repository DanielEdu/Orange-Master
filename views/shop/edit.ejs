<div class="container">	
	
	<h1>EDITAR TIENDA</h1>

	<div class="divForms">
		<form action="/shop/update/<%= store.id_store %>" method="POST">
			<table> 
				<tr> 	
					<td class="labeltd"><label>Nombre:</label></td>
					<td><input type="text" class="storeName form-control" name="storeName" placeholder="Ingresar Nombre de Tienda" value="<%= store.storeName %>" required /></td>
				</tr>
				<tr> 	
					<td class="labeltd"><label>ID:</label></td>
					<td><input type="text" class="storeName form-control" name="idStore" placeholder="Ingresar identificador de tienda" value="<%= store.idStore %>" required /></td>
				</tr>
				<tr>
					<td class="labeltd"><label for="">Distrito: </label></td>
					<td><select  id="district" class="cambio form-control" name="district" required>
							<option value="<%= store.storeDistrict %>"> <%= district %> </option>
							<% _.each(distritos, function(distrito){ %>

							<option value="<%= distrito.id_district %>" > 
								<%= distrito.districtName %>
							</option>
							
							<%})%>
				    </select></td>
				</tr>
				<tr>
					<td class="labeltd"><label>Dirección:</label></td>
					<td><input type="text" class="form-control"  name="storeAddress" placeholder="Ingresar Dirección de Tienda" value="<%= store.storeAddress %>" required/></td>
				</tr>
				<tr>
					<td class="labeltd"><label>Teléfono: </label></td>
					<td><input type="number" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="Teléfono/Celular" value="<%= store.phoneNumber %>" /></td>
				</tr>
			</table>
			<input type="submit" class="btn btn-danger" value="Guardar"/>	
		</form>
	</div>
</div>

