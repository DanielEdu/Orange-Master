<div class="container">
<h1>SERVICIOS</h1> 

	<form >
    	<label for="">Desde: </label>
    	<input type="date" id="inicio" name="startDate" step="1" min="2014-01-01" max="<%= systemDateFormat %>" value="<%= systemDateFormat %>">
    	<label for="">Hasta: </label>
    	<input type="date" id="fin" name="startDate" step="1" min="2015-01-01" max="2020-01-01" value="<%= systemDateFormat %>"> <br><br>
        
       
        <label>Articulo: </label>
        <select class="service cambio form-control" name="saler" >
            <option value="false">*Todos los Art√≠culos</option>
            <% _.each(services, function(art){ %>
                <option value="<%= art.id_service %>"> 
                <%= art.serviceName %>
                </option>
            <%})%>
        </select><br><br>
        <label for=""><a class="hover" href="/salereport/showservices/"><strong>Reporte Por Servicios y productos</strong></a></label><br><br>

    	<button id="send" class="btn btn-danger"> Filtrar </button> <div class="spin" ></div>

    </form>

	<table id="dvData" class="display table table-borderd table-hover" >
		<thead>
		<tr>
		<!--		<th>ID</th>-->
			<th>Servicio</th>
			<th>Numero de Ventas</th>
			<th>Total</th>

			
		</tr>
		</thead>

		<tbody>	<% var a=0.00 %>
			<% _.each(result, function(r){ %>
			<tr> 
				<td><%= r.name %></td>
				<td><%= r.cant %></td>
				<td>S/.<%= r.total %>  <% a+=parseFloat(r.total) %></td>
			</tr>
			<%})%>
		</tbody>
	
		<tfoot>
        <tr>
            <th></th>
            <th ></th>
            <th>S/.<%= a.toFixed(2) %></th>
        </tr>
    </tfoot>

	</table><br><br>
<hr><br>
	<h1>PRODUCTOS</h1>

	<table id="dvData2" class="display table table-borderd table-hover" >
		<thead>
		<tr>
			
			<th>Producto</th>
			<th>Numero de Ventas</th>
			<th>Total S/.</th>
			
		</tr>
		</thead>

		<tbody>	
		<% var b=0.0 %>
			<% _.each(result2, function(r){ %>
			<tr> 
				<td><%= r.name %></td>
				<td><%= r.cant %></td>
				<td>S/.<%= r.total %> <% b+=parseFloat(r.total) %></td>
			</tr>
			<%})%>
		</tbody>
		<tfoot>
	        <tr>
	            <th></th>
	            <th ></th>
	            <th>S/.<%= b.toFixed(2) %></th>
	        </tr>
	    </tfoot>
	</table> 
</div>

<script>
$(document).ready(OnReady);
  	function OnReady(){
	    $('#dvData').DataTable({
	    	"scrollY":        "300px",
        	"scrollCollapse": true,
	    	"paging":   false,
	    	"info":     false,
	    	"language": {
	    		"search": "Buscar",
	    	}
	    });

	    $('#dvData2').DataTable({
	    	"scrollY":        "300px",
        	"scrollCollapse": true,
	    	"paging":   false,
	    	"info":     false,
	    	"language": {
	    		"search": "Buscar",
	    	}
	    });
	}
</script>