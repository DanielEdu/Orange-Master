
<div class="container">
<h1>USUARIOS</h1>  <a class="btn btn-success btn-default" href="/user/new/">+ Agregar usuario</a>
	<table id="dvData" class="display table table-borderd table-hover" >
	<thead>
		<tr>
			<th>Nombres</th>
			<th>Apellidos</th>
			<th>E-mail</th>
			<th>Permisos</th>
			<th></th>
			<th> </th>
		</tr>
	</thead>
	<tbody>	
		<% _.each(users, function(user){ %>
		<tr data-model="user"> 
			<td><%= user.firstName %></td>
			<td><%= user.lastName %></td>
			<td><%= user.email %></td>

			<% if (user.admin==='admin') { %>
			<td> <img src="/images/admin.png"></td>
			<% } %>	
			<% if (user.admin==='trainer') { %>
			<td> <img src="/images/trainer.png"></td>
			<% } %>
			<% if (user.admin==='user') { %>
			<td> <img src="/images/pawn.png"></td>
			<% } %>	
			<td><a href="/user/show/<%= user.id_user %>">Ver</a>
				<a href="/user/edit/<%= user.id_user %>">Editar</a></td>
			<td>
			<div class="onoffswitch">
			    <input type="checkbox" name="onoffswitch" class="check onoffswitch-checkbox" id="<%= user.id_user %>" <% if (user.state) { %>checked<% } %> >
			    <label class="onoffswitch-label" for="<%= user.id_user %>">
			        <span class="onoffswitch-inner"></span>
			        <span class="onoffswitch-switch"></span>
			    </label>
			</div>
			</td>
		</tr>
		<%})%>
	</tbody>
	</table> <br/>
		<a download="reporte.xls" href="#" onclick="return ExcellentExport.excel(this, 'dvData', 'Sheet Name Here');">Export to Excel</a>
</div>

