<div class="container">
	<% if(flash && flash.err) { %>
		<ul class="alert alert-danger">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>
<h1>REGISTRAR CLIENTE</h1> 
<div class="divForms">
	<form  action="/client/create" id="clientNew" method="POST" >
		<input type="text" name="flag" value="1" hidden /> 
		<table>
		<tr> 
			<td class="labeltd"><label>DNI: </label></td>
			<td><input type="text" id="documentNumber" name="documentNumber" class="form-control" placeholder="Ingresar DNI" /> </td>
		</tr>
		<tr>
			<td class="labeltd"><label>Nombres: </label></td>
			<td><input type="text" id="firstName" name="firstName" class="form-control" placeholder="Ingresar Nombres" /> </td>
		</tr>
		<tr>
			<td class="labeltd"><label>Apellidos: </label></td>
			<td><input type="text" id="lastName" name="lastName" class="form-control" placeholder="Ingresar Apellidos" /></td>
		</tr>
		<tr>
			<td class="labeltd"><label>Teléfono: </label></td>
			<td><input type="text" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="Telefono/celular" /></td>
		</tr>
		<tr>
			<td class="labeltd"><label>E-mail: </label>	</td>	
			<td><input type="text" id="email" name="email" class="form-control" placeholder="Ingresar E-mail" /> 
		</tr>
		<tr>
			<td class="labeltd"><label>Direccón: </label></td>
			<td><input type="text" name="address" class="form-control" placeholder="Ingresar Dirección" /> </td>
		</tr>
		<tr>
			<td class="labeltd"><label>Distrito: </label></td>
			<td><select  id="pais" class="cambio form-control" name="district" >
					<% _.each(distritos, function(distrito){ %>
					<option value="<%= distrito.id_district %>"> 
						<%= distrito.districtName %>
					</option>
					<%})%>
		    </select></td>
		</tr>
		<tr>
			<td class="labeltd"><label>Sexo: </label>	</td>	
			<td><select class="cambio form-control" name="sex" required>
					<option value="false">Femenino</option>
					<option value="true">Masculino</option>
				</select>
			</td> 
		</tr>
		<tr>
			<td class="labeltd"><label>Peso: </label>	</td>	
			<td><input type="number" id="weight" step="any" name="weight" class="form-control" placeholder="Ingresar el Peso" /> </td>
		</tr>
		<tr>
			<td class="labeltd"><label>Altura: </label>	</td>	
			<td><input type="number" id="height" min="0" step="any" name="height" class="form-control" placeholder="Ingresar la Altura" /> </td>
		</tr>
		<tr>
			<td class="labeltd"><label>% de Grasa: </label>	</td>	
			<td><input type="text" id="fatPercentage" step="any"  name="fatPercentage" class="form-control" placeholder="% de Grasa Corporal" /> </td>
		</tr>
		</table>
		<br><br>
		
		<table>
		<tr>
			<td class=""><label>¿Actualmente estas entrenando? </label>	</td>
		</tr>
		<tr>	
			<td><select class="cambio form-control" name="question1" >
					<option value="Si">Si</option>
					<option value="No">No</option>
				</select>
			</td> 
		</tr>
		<tr>
			<td class=""><label>¿Ya lo has tomado antes? ¿Como te fue? </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question2" class="form-control" /> </td>
		</tr>
		<tr>
			<td class=""><label>¿Cuánto compraste o promoción adquiriste? </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question3" class="form-control" /> </td>
		<tr>
		</tr>
			<td class=""><label>¿Dónde lo compraste? </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question4" class="form-control" /> </td>
		</tr>
		<tr>
			<td class=""><label>¿Dónde entrenas? </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question5" class="form-control" /> </td>
		</tr>
		<tr>
			<td class=""><label>¿Cómo conociste nuestra tienda? </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question6" class="form-control" /> </td>
		</tr>
		<tr>
			<td class=""><label>Observaciones: </label></td>
		</tr>
		<tr>
			<td><input type="text" name="question7" class="form-control" /> </td>
		<tr>
		</table><br><br>
		<input type="submit" class="btn btn-danger" value=" Registrar Cliente"/> <br/>
	</form>
</div>
</div>

<script>
$(document).ready(OnReady);
function OnReady(){

	$("#documentNumber").focus();

	$("#clientNew").validate({
		rules:{
			firstName:"required",
			lastName:"required",
			documentNumber:{
				required: 	true,
				number: 	true,
				minlength: 	8,
				maxlength: 	8,
			},
			email:{
				email: true,
			},
			phoneNumber:{
				number: 	true,
				minlength: 	6,
				maxlength: 	9,
			},
			weight:{
				number: true,
				min: 	1,
			},
			height:{
				number: true,
				min: 	1,
				max: 	2.99,
			},
			fatPercentage:{
				number: true,
				min: 	1,
				max: 	100,
			},
		},
		messages: {
			firstName: 	"Por favor ingresar nombre(s).",
			lastName: 	"Por favor ingresar apellido(s).",
			email: 		"Por favor ingrese un e-mail valido ",
			documentNumber: {
				required: 	"Debe ingresar el numero de DNI.",
				number: 	"El DNI debe ser numerico de 8 digitos.",
				minlength: 	"El DNI debe ser de 8 digitos",
				maxlength: 	"El DNI debe ser de 8 digitos",
			},
			phoneNumber: {
				number: 	"El Nro. telefonico debe ser numerico.",
				minlength: 	"No puede ser menor a 6 digitos",
				maxlength: 	"No puede ser mayot a 8 digitos",
			},
			weight:{
				number: "Debe ser un valor numerico en Kilogramos",
				min:  	"No puede ser Negativo.",
			},
			height:{
				number: "Debe ser un valor numerico en Metros",
				min: 	"No puede ser Negativo.",
				max: 	"Ingrese una altura en Metros"
			},
			fatPercentage:{
				number: 	"Debe ser numerico del 0 al 100",
				min: 	"No puede ser Negativo.",
				max: "No puede ser mas del 100%",
			},

		}
	});

}
</script>