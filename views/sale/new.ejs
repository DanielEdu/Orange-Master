<link rel="stylesheet" href="/styles/newSaleStyle.css">

<!-- //////////////////////////// -->
<input type="text" class="preSale" hidden value="<%= flag %>" />
<div id="main" class="container" >
<h1>INGRESO DE VENTA</h1>

 
<div class="divForms">
<div id="mensaje" >
	<ul class="alert alert-info">
		<li id="msj" > </li>
	</ul> 
</div> 
	<form name="fo1" class="form-inline" >
	<label >Ingresar DNI:</label>
	<input id="mysearch" type="number" name="dniSeach" class="form-control" value="<%= dni%>" /> 
	<button id="searchBT" class="btn btn-info"/><img src="/images/lupa.png" height="20" width="20" /> Buscar</button><br/><br/>
	<div class="form-group"><div class="input-group">
	<div class="input-group-addon">Nombres</div>
	<input type="text" class="clientInfo form-control" id="firstName" name="firstName" placeholder="Nombres" disabled /><br/>
	</div></div>
	<div class="form-group"><div class="input-group">
	<div class="input-group-addon">Apellidos</div>
	<input type="text" class="clientInfo form-control" id="lastName" name="lastName" placeholder="Apellidos" disabled /> 
	</div></div><br/>
  	<hr>		
	
</form>

<form name="fo2" class="form-inline">
	<div >	
	<div class="form-group"><div class="input-group">
		<div class="input-group-addon">Servicio</div>
		<select class="form-control" id="idService" name="service" style="color: white;background: dimgrey;" />	
			<% _.each(servicios, function(serv){ %>
				<option value="<%= serv.serviceName %>" <%if(serv.serviceFlag==='service'){%> style="background: rgb(245, 60, 60);"<%}else{%> style="background: rgb(60, 142, 245);" <%}%> > 
					<%= serv.serviceName %>
				</option>
			<%})%>
	   	</select>
	</div></div>
	<div class="form-group"><div class="input-group">
		<div class="input-group-addon">#Cantidad</div>
		<input type="number" id="sCantidad" class="form-control" placeholder="cantidad" />
	</div></div>
	<div class="form-group"><div class="input-group">
		<div class="input-group-addon">S/.</div>
		<input type="text" name="sPrice" id="sPrice" class="form-control" placeholder="0.00"/>
	</div></div>
		<input type="submit" id="add" class="btn btn-danger" value="+" /><br/>
	</div>
	<br>
	<div id="tableSale">
	<table id="tableSale" class="table table-hover" >
	    <thead>
	        <tr>
	        	<th>borrar</th>
	            <th>Producto</th>
	            <th>Cantidad</th>
	            <th>precio/u</th>
	            <th>Precio total</th>
	        </tr>
	    </thead>
	    <tbody class="tableSale"> </tbody>
	</table>
	</div>

	<hr>
	<div class="form-group"><div class="input-group">
		<div class="input-group-addon">Total: S/.</div>
		<input class="form-control" id="total" type="number" name="fullPrice" disabled value="0.00">
	</div></div>

<!--   *******   Ticket  ******   -->

<div id="ticket" hidden >
	<style type="text/css">
		.divBody{
			font-size: 0.7em;
			text-align: center;
			font-family: monospace;
			text-transform: capitalize;
			text-decoration: none;
		}
		p{
			margin: 0.11em;
		}
		td {
			padding: 0 0.5em;
		}
	</style>

	<div class="divBody">
		<p><%= ticket[0].rSocial %></p>
		<p>R.U.C.10409072041 - Teléfono:<%= ticket[0].phoneNumber %></p>
		<p><%= ticket[0].address %></p>
		<p><%= ticket[0].city%>-<%= ticket[0].district %></p>
		<p><%= storeName %></p>
		<p><%= storeAddress %></p>
		<p>NRO.AUTORI: 123456789</p>
		<p ><span id="date"></span> <span id="ticketNro">TICKET:<%= storeId %>-</span> </p>
		<p id="tName">CLIENTE: </p>
		<p id="tDni">DIN: </p>
	
		<table id="tableSalePrint" >
		    <thead>
		        <tr>	     
		            <td>Descripción</td>
		            <td>Can</td>
		            <td>P-Uni</td>
		            <td>P-Tot</td>
		        </tr>
		        <tr><td>-------------------------------------------------</td></tr>
		    </thead>
		    <tbody class="tableSalePrint"> </tbody>
		</table>
		<p id="tPrice" > Precio total: S/.</p>
		<p> -------------------------------------------------- </p>
		<p>Cajero: <%= session.User.firstName %> <%= session.User.lastName %></p>
		
		<p><%= ticket[0].footer%></p>
	</div>
</div>	
<!--   *******  Fin del Ticket  ******   -->

    <button id="print" class="saveSale btn btn-danger" disabled > <strong><img src="/images/save.png" class="" height="25" width="25" /> Guardar e imprimir </strong></button>
    <a class="hover navbar-btn navbar-right" href="/sale/new"><strong>*Borrar Todo</strong></a>
	</div>
	</form>
</div>
</div>


<script src="/js/form.js"></script>
